@{
    ViewData["Title"] = "Forum";
}

<h1>@ViewData["Title"]</h1>
<p>Leave a message</p>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4>Message</h4>
            <input type="text" id="messageInput" class="form-control" />
        </div>
        <div class="col-md-3">
            <br />
            <button type="button" id="sendButton" class="btn btn-info">Send Message</button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h4>Messages</h4>
            <div id="messagesList"></div>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/forum.js"></script>